
<div class='container'>
  <h4>
    <%= link_to "ユーザーを削除する", admins_user_path, method: :delete, "data-confirm" => "本当に削除しますか？" %>
  </h4>
  <h4>
    <%= link_to "ユーザーを停止・再開させる", edit_admins_user_path %>
  </h4>
  
  <div class=“row”>
    <div class='mx-auto col-lg-6'>
      <h1>投稿一覧</h1>
      <table class = "table table-bordered">
        <% @catches.each do |catch| %>
          <th><%= @user.name %></th>
        <tr>
          <th>釣果・<%= catch.fish %></th>
        </tr>
        <tr>
          <th>
          <% if catch.image.attached? %>
          <%= image_tag catch.image, size: "200x200" %>
          <% else %>
          <%= image_tag 'no_image', size: "200x200" %>
          <% end %>
          </th>
        </tr>
        <tr>
          <th><%= catch.gear %></th>
        </tr>
        <tr>
          <th><%= catch.point %></th>
        </tr>
        <tr>
          <th><%= catch.day %>
          <%= catch.time %>
          </th>
        </tr>
        <tr>
          <th>
            <% if catch.comment == true %>
            <%= catch.comment %>
            <% else %>
            <%= "コメントなし" %>
            <% end %>
          </th>
        </tr>
        <tr>
          <th><%= link_to "投稿を削除する", admins_catch_path(catch.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></th>
        </tr>
        
        
        <% end %>
      </table>
      <td>会員ステータス</td>
      <tr>
            <% if @user.is_deleted == true %>
        <th class="text-secondary" ><strong>退会</strong></th>
        <% else %>
        <th class="text-success" ><strong>有効</strong></th>
        <% end %>
        </tr>
    </die>
  </die>
</die>