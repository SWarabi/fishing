<main>
  <div class='container'>
  <h1><%= image_tag 'fishing.png', size: "100x100" %>下書き一覧</h1>
  </div>
  <div class='back'>
  <div class='container'>
    
    
  </div>
  
  <div class='container'>
    <div class=“row”>
      <div class='mx-auto col-lg-12'>
        
        <table class = "table table-bordered back-table">
          <thead>
            <tr align="center" valign="middle">
              <th>名前</th>
              <th>釣果</th>
              <th>道具</th>
              <th>場所</th>
              <th>日時</th>
              
              <th>詳細</th>
            </tr>
          </thead>
          
          <% @catches.each do |catch| %>
          <tr align="center" valign="middle">
            <td><%= @user.name %></td>
            <td>
            <% if catch.image.attached? %>
            <%= image_tag catch.image, size: "200x200" %>
            <% else %>
            <%= image_tag 'no_image.jpg', size: "200x200" %>
            <% end %>
            <br>
            <%= catch.fish %>
            </td>
            <td><%= catch.gear %></td>
            <td><%= catch.point %></td>
            <td>
              <% if catch.day %>
              <%= catch.day.strftime('%Y年%m月%d日') %>
              <%= catch.time.strftime('%H時%M分') %>
              <% end %>
            </td>
            
            <td><%= link_to "詳細", edit_public_draft_path(catch.id) %></td>
            <%# if catch.comment == true %>
            <%#= catch.comment %>
            <%# else %>
            <%#= "コメントなし" %>
            <%# end %>
          </tr>
          <% end %>
        </table>
      </die>
    </die>
  </die>
  </div>
</main>