<main>
<div class='container'>
  <div class="mt-3">
    <%= render 'public/searchs/form' %>
    <div class='container'>
      <%= link_to "ユーザ情報編集", edit_public_user_path(current_user) %><br>
      <%= link_to "いいね一覧", favorites_public_user_path(current_user) %>
    </div>
  </div>
</div>

  <div class='container'>
  <div class=“row”>
    <div class='mx-auto col-lg-7'>
      <h1>投稿一覧</h1>
      <table class = "table table-bordered">
        <% @catches.each do |catch| %>
          <th><%= @user.name %></th>
        <tr>
          <th>釣果・<%= catch.fish %></th>
        </tr>
        <tr>
          <th>
          <% if catch.image.attached? %>
          <%= image_tag catch.image, size: "200x200" %>
          <% else %>
          <%= image_tag 'no_image', size: "200x200" %>
          <% end %>
          </th>
        </tr>
        <tr>
          <th><%= catch.gear %></th>
        </tr>
        <tr>
          <th><%= catch.point %></th>
        </tr>
        <tr>
          <th><%= catch.day.strftime('%Y年%m月%d日') %>
          <%= catch.time.strftime('%H時%M分') %>
          </th>
        </tr>
        <tr>
          <th>
            コメント件数：<%= catch.catch_comments.count %>
            <%# if catch.comment == true %>
            <%#= catch.comment %>
            <%# else %>
            <%#= "コメントなし" %>
            <%# end %>
          </th>
        </tr>
        <tr>
            <th id="favorite_buttons_<%= catch.id %>">
            <%= render "public/favorites/favorites", catch: catch %>
            </th>
        </tr>
        <tr>
            <th>
              <%= link_to "詳細", public_catch_path(catch.id) %>
            </th>
        </tr>
        <% end %>
      </table>
    </die>
  </die>
</die>

</main>

<footer>
  <div class='container mt-5'>
  	<div class='row'>
    	<div class='mx-auto'>
    		<p><%= link_to "釣果へ戻る", public_catches_path %></p>
    	</div>
    </div>
  </div>
</footer>