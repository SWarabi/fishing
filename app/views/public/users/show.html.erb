<main>
  <div class='container'>
  <h1><%= image_tag 'fishing.png', size: "100x100" %>マイページ</h1>
  </div>
  <div class='back'>
  <div class='container' ;>
    
    <div class="mt-3">
      <div class='container'>
        <%= link_to "ユーザ情報編集", edit_public_user_path(current_user), class: "btn btn-dark btn-primary w-25 mb-3" %>
        <%= link_to "いいね一覧", favorites_public_user_path(current_user), class: "btn btn-dark btn-primary w-25 mb-3" %>
      </div>
    </div>
  </div>
  
  <div class='container'>
    <div class=“row”>
      <div class='mx-auto col-lg-12'>
        
        <table class = "table table-bordered back-table">
          <thead>
            <tr>
              <th>名前</th>
              <th>釣果</th>
              <th>道具</th>
              <th>場所</th>
              <th>日時</th>
              <th>いいね</th>
              <th>詳細</th>
              <th>コメント件数</th>
            </tr>
          </thead>
          
          <% @catches.each do |catch| %>
          <tr align="center" valign="middle">
            <td><%= @user.name %></td>
            <td>
            <% if catch.image.attached? %>
            <%= image_tag catch.image, size: "200x200" %>
            <% else %>
            <%= image_tag 'no_image.jpg', size: "200x200" %>
            <% end %>
            <br>
            <%= catch.fish %>
            </td>
            <td><%= catch.gear %></td>
            <td><%= catch.point %></td>
            <td><%= catch.day.strftime('%Y年%m月%d日') %>
            <%= catch.time.strftime('%H時%M分') %>
            </td>
            <td id="favorite_buttons_<%= catch.id %>">
              <%= render "public/favorites/favorites", catch: catch %>
            </td>
            <td><%= link_to "詳細", public_catch_path(catch.id) %></td>
            <td><%= catch.catch_comments.count %></td>
            <%# if catch.comment == true %>
            <%#= catch.comment %>
            <%# else %>
            <%#= "コメントなし" %>
            <%# end %>
          </tr>
          <% end %>
        </table>
      </die>
    </die>
  </die>
  </div>
</main>

<%#= render "public/footers/footer" %>

