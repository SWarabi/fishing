<main>
  <div class='container'>
    <h1><%= image_tag 'fishing.png', size: "100x100" %>ユーザー</h1>
  </div>
  <div class='back'>
    <div class='container' ;>
      <div class='container'>
        <div class=“row”>
          <div class='mx-auto col-lg-12'>
            <table class = "table table-bordered back-table">
              <thead>
                <tr align="center" valign="middle">
                  <th>名前</th>
                  <th>詳細</th>
                  <th>フォロー状態</th>
                </tr>
              </thead>
              
              <% @users.each do |user| %>
              <tr align="center" valign="middle">
                <td><%= user.name %></td>
                <td><%= link_to "Show", public_user_path(user.id) %></td>
                <td>
                  <% if current_user.following?(user) %>
                  <%= link_to "フォロー外す", public_user_relationships_path(user.id), method: :delete %>
                  <% else %>
                  <%= link_to "フォローする", public_user_relationships_path(user.id), method: :post %>
                  <% end %>
                </td>

              <% end %>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

