<main>
  <div class='container'>
    <h1><%= image_tag 'fishing.png', size: "100x100" %><%= @user.name %>のフォロワーリスト </h1>
  </div>
  <div class='back'>
    <div class='container' ;>
      <div class='container'>
        <div class=“row”>
          <div class='mx-auto col-lg-12'>
            
            <table class = "table table-bordered back-table">
              
              <thead>
                <tr>
                  <th>名前</th>
                  <th>フォロー数</th>
                  <th>フォロワー数</th>
                </tr>
              </thead>
              <% @users.each do |user| %>
              <tr>
                <td>
                  <%= link_to public_user_path(user.id) do %>
                  <%= user.name %>
                  <% end %>
                </td>
                <td>
                   <%= user.followings.count %>
                </td>
                <td>
                  <%= link_to public_follower_path(user.id) do %>
                  <%= user.followers.count %>
                  <% end %>
                </td>
              </tr>
              <% end %>
            </table>
            
          </div>
        </div>
      </div>
    </div>
  </div>
</main>