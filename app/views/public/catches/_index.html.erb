<main>
<div class='container'>
  <div class=“row”>
    <div class='mx-auto col-lg-12'>
      <table class = "table table-bordered">
<table>
    <thead>
        <tr>
            <th>投稿者名</th>
            <th>釣果</th>
            <th>道具</th>
            <th>場所</th>
            <th>日時</th>
            <th>詳細へ遷移</th>
            <th>編集へ遷移</th>
            <th>削除</th>
        </tr>
    </thead>
    <tbody id="catch">
    <% catches.each do |catch| %>
    
      <tr>
        <td><%= catch.user.name %></td>
        <td><%= catch.fish %></td>
        <td><%= catch.gear %></td>
        <td><%= catch.point %></td>
        <td>
          <% if catch.day %>
            <%= catch.day.strftime('%Y年%m月%d日') %>
            <%= catch.time.strftime('%H時%M分') %>
          <% end %>
          </td>
          <!--リンク遷移-->
        <td><%= link_to "詳細", public_catch_path(catch) %></td>
        <% if catch.user == current_user %>
          <td><%= link_to "編集", edit_public_catch_path(catch) %></td>
          <td><%= link_to "削除", public_catch_path(catch), method: :delete, remote: true %></td>
        <% else %>
          <td></td>
          <td></td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
</table>
    </div>
  </div>
</div>
</main>